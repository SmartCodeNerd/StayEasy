<% layout("/layouts/boilerplate.ejs") -%>
    <style>
        /* body {
            text-align: left;
        } */
        input {
            border: 1px solid green;
            border-radius: 10px;
        }
        h2 {
            text-decoration: underline;
        }
    </style>
</head>
<body >
    <br>
    <div class="row offset-1">
    <div class="content_index">
        <h2>Add New Listing</h2>
        <div class="col-md-8 ">
        <form method="POST" action="/listings" novalidate class="needs-validation">
        <div>
            <label for="title" class="form-label"><b>Title</b></label>
            <input name="title" placeholder="Enter title" type="text" class="form-control" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter Valid Title</div>
        </div>
        <br>
        <div>
            <label for="description" class="form-label"><b>Description</b></label>
            <textarea name="description" placeholder="Enter Description" rows="2" cols="25" class="form-control" required></textarea>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter a short description</div>
        </div>
        <br>
        <div>
            <label for="image" class="form-label"><b>Image URL</b></label>
            <input name="image" type="text" placeholder="Enter Image URL" class="form-control">
        </div>
        <br>
        <div>
            <label for="price" class="form-label"><b>Price</b></label>
            <input name="price" placeholder="Enter Price" class="form-control" required> 
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter Valid Price</div>
        </div>
        <br>
        <div>
            <label for="location" class="form-label"><b>Location</b></label>
            <input name="location" type="text"  placeholder="Enter Location" class="form-control" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter Valid Location</div>
        </div>
        <br>
        <div>
            <label for="country" class="form-label"><b>Country</b></label>
            <input name="country" type="text"  placeholder="Enter Country" class="form-control" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter Valid Country</div>
        </div>
        <br>
        <button class="btn btn-success">Submit</button>
    </form>
    </div>
    </div>
    </div>
</body>
</html>
